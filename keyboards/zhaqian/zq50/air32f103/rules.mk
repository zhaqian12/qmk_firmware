# MCU name
MCU = AIR32F103
MCU_LDSCRIPT = AIR32F103xBuf2
FIRMWARE_FORMAT = uf2

# Bootloader selection
BOOTLOADER = custom

WS2812_DRIVER = pwm

EEPROM_DRIVER = wear_leveling
WEAR_LEVELING_DRIVER = embedded_flash

KEYBOARD_SHARED_EP = yes
LTO_ENABLE = yes

OPT_DEFS += -DCORTEX_ENABLE_WFI_IDLE=TRUE
SRC += uf2_boot.c

